<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ToucanUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:ToucanUI.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ToucanUI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/tmm_icon.ico"
        Title="Toucan Mod Manager"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        WindowStartupLocation="CenterScreen">


  <Design.DataContext>
    <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
    <vm:MainWindowViewModel/>
  </Design.DataContext>

  <Panel>

    <ExperimentalAcrylicBorder IsHitTestVisible="False">
      <ExperimentalAcrylicBorder.Material>
        <ExperimentalAcrylicMaterial
            BackgroundSource="Digger"
            TintColor="Black"
            TintOpacity="1"
            MaterialOpacity="0.65"/>
      </ExperimentalAcrylicBorder.Material>
    </ExperimentalAcrylicBorder>

    <Grid RowDefinitions="Auto, Auto, *" ColumnDefinitions="*, Auto">
      <!-- Header -->
      <views:HeaderView x:Name="HeaderViewControl" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                        DataContext="{Binding HeaderVM}"/>

      <!-- Control Panel -->
      <views:ControlPanelView x:Name="ControlPanelViewControl" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                              DataContext="{Binding ControlPanelVM}" Margin="10"/>
      <!-- Content -->
      <views:ModlistView x:Name="ModlistViewControl" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="1"
						 DataContext="{Binding ModlistVM}" Margin="10"/>
	  <!--Side Panel -->
	  <views:SidePanelView x:Name="SidePanelViewControl" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="1"
						   DataContext="{Binding SidePanelVM}" Margin="10"/> 

    </Grid>
  </Panel>
</Window>