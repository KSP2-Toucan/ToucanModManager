<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ToucanUI.Views.VersionDialog"
        Width="400" Height="150" Title="Version Information">
  
  <Grid Margin="20">
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TextBlock Grid.Row="0" x:Name="MessageTextBlock" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center"/>

    <Button Grid.Row="1" Content="OK" Height="30" HorizontalAlignment="Center" Margin="0,10,0,0"/>
  </Grid>
</Window>
