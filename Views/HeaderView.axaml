<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="200"
             x:Class="ToucanUI.Views.HeaderView"
             Background="Transparent">

  <Panel>
    <Border CornerRadius="5" BoxShadow="inset 0 -30 2 2 #191919">
      <Border.Background>
        <LinearGradientBrush StartPoint="50%,55%" EndPoint="50%,0%">
          <GradientStop Color="#252525" Offset="0.0"/>
          <GradientStop Color="#67411D" Offset="1.0"/>
        </LinearGradientBrush>
      </Border.Background>



      <Grid RowDefinitions="*, Auto, Auto, *" ColumnDefinitions="Auto, Auto, *, Auto">
        <Image Source="/Assets/tmm_logo.png" Width="110" Grid.Row="1" Grid.RowSpan="2"
               Grid.Column="0" Margin="0 0 50 0"/>

        <!-- TITLE/VERSION -->
        <TextBlock Text="TMM" FontSize="26"
                   Foreground="White" Grid.Row="1" Grid.RowSpan="2" VerticalAlignment="Center"
                   Grid.Column="1" FontFamily="{StaticResource Orbitron}" Margin="-50 0 0 0"/>
        
        <!-- FILE/EDIT/HELP MENU -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="0">
          <Menu>

            <MenuItem Header="File" Foreground="DarkGray">
              <MenuItem Header="Install">
                <MenuItem Header="Local" />
                <MenuItem Header="Github" />
                <MenuItem Header="Spacedock" />
                <MenuItem Header="Toucan" />
              </MenuItem>
              <Separator />
              <MenuItem Header="New Profile" />
              <MenuItem Header="Open Profile" />
              <MenuItem Header="Save Profile" />
              <Separator />
              <MenuItem Header="Exit"
                        Command="{Binding ExitCommand}"/>
            </MenuItem>
          </Menu>

          <Menu>
            <MenuItem Header="Edit" Foreground="DarkGray">
              <MenuItem Header="Set Game Directory..."
                        Command="{Binding SetGameInstallPathCommand}"/>
              <MenuItem Header="Scan KSP2 Install Locations..."
                        Command="{Binding ScanKSP2InstallLocationsCommand}" />

              <Separator />
              <MenuItem Header="View Config File..."
                        Command="{Binding ViewConfigFileCommand}" />
              <MenuItem Header="Clear Config File..."
                        Command="{Binding ClearConfigFileCommand}"/>
            </MenuItem>
          </Menu>

          <Menu>
            <MenuItem Header="View" Foreground="DarkGray">
              <MenuItem Header="Toggle List View"
                        Command="{Binding MainViewModel.ModlistVM.ToggleViewCommand}"/>
              <Separator />
              <MenuItem Header="Dark Mode" />
              <MenuItem Header="Light Mode" />
            </MenuItem>
          </Menu>

          <Menu>
            <MenuItem Header="Help" Foreground="DarkGray">
              <MenuItem Header="GitHub Page" 
                        Command="{Binding MainViewModel.FooterVM.OpenGitHubCommand}"/>
              <Separator />
              <MenuItem Header="Check for update" />
            </MenuItem>
          </Menu>
        </StackPanel>

        
        <!-- LAUNCH BUTTON -->

        <Button x:Name="LaunchButton" Content="LAUNCH" FontSize="30"
                Grid.Row="1" Grid.RowSpan="2" Grid.Column="3" Margin="30"
                Background="#FF5722" Foreground="#800F0E" FontFamily="{StaticResource Orbitron}"
                FontWeight="SemiBold"/>

      </Grid>
    </Border>
  </Panel>

</UserControl>
