<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="200"
             x:Class="ToucanUI.Views.HeaderView"
             Background="Transparent">

  <Panel>

      <Grid RowDefinitions="Auto, Auto">
        <Border CornerRadius="5" BoxShadow="inset 0 -5 5 2 #191919">
          <Border.Background>
            <LinearGradientBrush StartPoint="50%,40%" EndPoint="50%,0%">
              <GradientStop Color="#252525" Offset="0.0"/>
              <GradientStop Color="#67411D" Offset="1.0"/>
            </LinearGradientBrush>
          </Border.Background>

          <Grid Grid.Row="0" ColumnDefinitions="Auto, *, Auto">


            <Image Source="/Assets/tmm_logo.png" Width="90" Height="90" Grid.Row="0"
                   Grid.Column="0" HorizontalAlignment="Left"
                   ToolTip.Tip="Toucan Mod Manager"/>

            <!-- LAUNCH BUTTON -->
            <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="Auto, Auto"
                  Grid.Row="0" Grid.Column="3" Margin="0 5 20 10">

              <Button x:Name="LaunchButton" FontSize="26" Width="220"
                Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Background="#FF5722"
                Foreground="#800F0E" FontFamily="{StaticResource Orbitron}"
                FontWeight="SemiBold" Margin="0 10">
                <TextBlock Text="LAUNCH" HorizontalAlignment="Center" VerticalAlignment="Center"/>
              </Button>

              <TextBlock Text="Time Played" FontFamily="{StaticResource Orbitron}" TextWrapping="Wrap"
                         FontSize="12" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center"/>


              <StackPanel Orientation="Horizontal"
                          HorizontalAlignment="Center"
                          Grid.Row="1"
                          Grid.Column="1">
                
                <TextBlock Text="12" Foreground="DarkGray" FontSize="12"
                           FontFamily="{StaticResource Orbitron}"/>
                <TextBlock Text="H " Foreground="DarkGray" FontSize="12"
                           FontWeight="Bold" Padding="4 0 5 0"/>
                
                <TextBlock Text="34" Foreground="DarkGray" FontSize="12"
                           FontFamily="{StaticResource Orbitron}"/>
                <TextBlock Text="M " Foreground="DarkGray" FontSize="12"
                           FontWeight="Bold" Padding="4 0 5 0"/>
                
                <TextBlock Text="56" Foreground="DarkGray" FontSize="12"
                           FontFamily="{StaticResource Orbitron}"/>
                <TextBlock Text="S" Foreground="DarkGray" FontSize="12"
                           FontWeight="Bold" Padding="4 0 5 0"/>
              </StackPanel>



            </Grid>

          </Grid>
        </Border>



        <!-- FILE/EDIT/HELP MENU -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0">
          <Menu>

            <MenuItem Header="File" Foreground="DarkGray">
              <MenuItem Header="Install">
                <MenuItem Header="Local" />
                <MenuItem Header="Github" />
                <MenuItem Header="Spacedock" />
                <MenuItem Header="Toucan" />
              </MenuItem>
              <Separator />
              <MenuItem Header="New Profile" />
              <MenuItem Header="Open Profile" />
              <MenuItem Header="Save Profile" />
              <Separator />
              <MenuItem Header="Exit"
                        Command="{Binding ExitCommand}"/>
            </MenuItem>
          </Menu>

          <Menu>
            <MenuItem Header="Edit" Foreground="DarkGray">
              <MenuItem Header="Set Game Directory..."
                        Command="{Binding SetGameInstallPathCommand}"/>
              <MenuItem Header="Scan KSP2 Install Locations..."
                        Command="{Binding ScanKSP2InstallLocationsCommand}" />

              <Separator />
              <MenuItem Header="View Config File..."
                        Command="{Binding ViewConfigFileCommand}" />
              <MenuItem Header="Clear Config File..."
                        Command="{Binding ClearConfigFileCommand}"/>
            </MenuItem>
          </Menu>

          <Menu>
            <MenuItem Header="View" Foreground="DarkGray">
              <MenuItem Header="Toggle List View"
                        Command="{Binding MainViewModel.ModlistVM.ToggleViewCommand}"/>
              <Separator />
              <MenuItem Header="Dark Mode" />
              <MenuItem Header="Light Mode" />
            </MenuItem>
          </Menu>

          <Menu>
            <MenuItem Header="Help" Foreground="DarkGray">
              <MenuItem Header="GitHub Page"
                        Command="{Binding MainViewModel.FooterVM.OpenGitHubCommand}"/>
              <Separator />
              <MenuItem Header="Check for update" />
            </MenuItem>

          </Menu>

        </StackPanel>
        

      </Grid>

  </Panel>

</UserControl>
